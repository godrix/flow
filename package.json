{
  "name": "@godrix/flow",
  "version": "1.1.0",
  "type": "module",
  "description": "CLI tool to create structured task contexts with templates",
  "main": "./dist/cli.js",
  "bin": {
    "@godrix/flow": "./dist/cli.js"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc && npm run copy-templates",
    "copy-templates": "cp -r src/templates dist/",
    "prepare": "npm run build",
    "dev": "npm run build && node ./dist/cli.js"
  },
  "keywords": [
    "cli",
    "task",
    "templates",
    "productivity",
    "workflow"
  ],
  "author": "Carlos Godri",
  "license": "MIT",
  "files": [
    "dist/**/*"
  ],
  "dependencies": {
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "chalk": "^5.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/fs-extra": "^11.0.4",
    "typescript": "^5.8.3"
  }
}
